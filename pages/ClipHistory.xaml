<UserControl x:Class="superClipboard.ClipHistory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:superClipboard"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400">
    <UserControl.Resources>
        <local:DataTypeToIconConverter x:Key="DataTypeToIconConverter"/>
        <local:ClipboardDataPreviewConverter x:Key="PreviewConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 工具栏 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button Content="清空历史" Click="ClearHistory_Click" Margin="5"/>
        </StackPanel>

        <!-- 历史列表 -->
        <ListBox x:Name="HistoryListBox" Grid.Row="1" Margin="10"
                 MouseDoubleClick="HistoryListBox_MouseDoubleClick"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="3" Padding="5" Margin="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- 图标 -->
                            <TextBlock Grid.Column="0" Text="{Binding Type, Converter={StaticResource DataTypeToIconConverter}}" 
                                       FontFamily="Segoe UI Symbol" FontSize="20" Margin="0,0,10,0" VerticalAlignment="Center"/>

                            <!-- 时间 + 预览 -->
                            <StackPanel Grid.Column="1" Orientation="Vertical">
                                <TextBlock Text="{Binding Timestamp, StringFormat='HH:mm:ss'}" Foreground="Gray" FontSize="10"/>
                                <TextBlock Text="{Binding ., Converter={StaticResource PreviewConverter}}" 
                                           TextWrapping="Wrap" MaxHeight="40" TextTrimming="CharacterEllipsis"/>
                            </StackPanel>

                            <!-- 类型标识 -->
                            <TextBlock Grid.Column="2" Text="{Binding Type}" Foreground="Blue" Margin="5,0,0,0" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>