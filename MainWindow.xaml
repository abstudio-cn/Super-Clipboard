<ui:FluentWindow x:Class="superClipboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:superClipboard"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
        ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
        Height="800" Width="630" MinHeight="500" MinWidth="300" WindowStyle="None" WindowStartupLocation="CenterScreen"
        mc:Ignorable="d" SnapsToDevicePixels="True"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <ui:TitleBar x:Name="TitleBar" 
                     Title="超级剪贴板" 
                     CloseWindowByDoubleClickOnIcon="True"
                     Grid.Row="0">
            <ui:TitleBar.Icon>
                <ui:ImageIcon Source="Resources/icon.png" />
            </ui:TitleBar.Icon>
        </ui:TitleBar>

        <!-- 导航视图 -->
        <ui:NavigationView x:Name="MainNavigationView"
                          Padding="42,0,42,0" 
                          PaneDisplayMode="LeftFluent" 
                          Margin="0,0,0,6" 
                          Grid.Row="1"
                          MenuItemsSource="{Binding CurrentPage}"
                           >
        </ui:NavigationView>
        
    </Grid>
</ui:FluentWindow>